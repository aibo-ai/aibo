# Content Architect Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure Cognitive Search Configuration
AZURE_SEARCH_SERVICE_NAME=your-search-service-name
AZURE_SEARCH_ADMIN_KEY=your_search_admin_key_here
AZURE_SEARCH_API_VERSION=2023-11-01
AZURE_SEARCH_INDEX_NAME=content-architect-index

# Azure Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
COSMOS_DB_KEY=your_cosmos_db_key_here
COSMOS_DB_DATABASE_NAME=ContentArchitect
COSMOS_DB_CONTAINER_NAME=content

# Claude AI Configuration (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# News API Configuration
NEWS_API_KEY=your_news_api_key_here
NEWS_API_URL=https://newsapi.org/v2

# Exa API Configuration
EXA_API_KEY=your_exa_api_key_here
EXA_API_URL=https://api.exa.ai

# Social Searcher API Configuration
SOCIAL_SEARCHER_API_KEY=your_social_searcher_api_key_here
SOCIAL_SEARCHER_API_URL=https://api.social-searcher.com

# SERP API Configuration
SERPER_API_URL=https://google.serper.dev/search
SERPER_API_KEY=your_serper_api_key_here

# Azure Redis Cache Configuration
AZURE_REDIS_HOST=your-redis-cache.redis.cache.windows.net
AZURE_REDIS_PORT=6380
AZURE_REDIS_KEY=your_redis_access_key_here
AZURE_REDIS_TLS_ENABLED=true

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Azure Function Configuration
FUNCTIONS_WORKER_RUNTIME=node
WEBSITE_NODE_DEFAULT_VERSION=~18
